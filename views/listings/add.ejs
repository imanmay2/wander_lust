<% layout("/layouts/boilerplate.ejs") -%>

  <body>
    <h2 class="add_heading">CREATE NEW LISTING</h2>
    <form action="/listings/addListings/add" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="title_"
          placeholder="Enter a catchy Title" required>
          <div class="valid-feedback">
            Title looks good!
          </div>
          <div class="invalid-feedback">
            Title is not valid.
          </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="descrip_" rows="3" required></textarea>
        <div class="invalid-feedback">
          Enter a valid Description!
        </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Image Link</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="url_"
          placeholder="Enter the image URL">
      </div>
      <div>
        <div class="inline_block_">
          <label for="exampleFormControlInput1" class="form-label">Price</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" name="price_" placeholder="Price"
            required>
            <div class="invalid-feedback">
              Invalid Price.
            </div>
        </div> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
        <div class="inline_block_">
          <label for="exampleFormControlInput1" class="form-label">Country</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" name="country_" placeholder="India"
            required>
            <div class="invalid-feedback">
              Invalid Country.
            </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Location</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="location_"
          placeholder="Jaipur,Rajasthan" required>
          <div class="invalid-feedback">
            Invalid Location.
          </div>
      </div>
      <br>
      <button class="btn btn-danger" style="margin-bottom: 40px;">ADD</button>
    </form>
    
  </body>